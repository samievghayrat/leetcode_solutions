class Solution {
public:
    string truncateSentence(string s, int k) {
        int m=k-1;
        string myS;
            for(int i=0; i<s.size(); i++){
                if(s[i]==' '){
                    if(m>0){
                        m--;
                    }else{
                        break;
                    }
                    
                }
                                myS+=s[i];

            }
        
        return myS;
    }
};
